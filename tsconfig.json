{
  "compilerOptions": {
	// language and environment
    "jsx": "react-jsx",
	"target": "es2022",

	// modules
    "module": "Node16",
    "moduleResolution": "Node16",

	// Interop Constraints
    "allowSyntheticDefaultImports": true,
	
	// type checking
	"strict": true,
	"noFallthroughCasesInSwitch": true,
	"noImplicitReturns": true,
	"noUnusedLocals": true,
	"noUnusedParameters": true,
	
	// emit
	"outDir": "dist",
	"declaration": true,
  }
}